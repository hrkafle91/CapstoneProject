
@{
    ViewBag.Title = "QuestionsView";
}

<div style="margin-top:3%;">

    <h2>Select your experience with the following skills:</h2><br /><br /><br />

    @using (Html.BeginForm())
    {
        <div class="form-group row justify-content-center">
            <label for="inputState" class="col-md-2 col-form-label-lg">Salesforce Platform</label>
            <div class="col-md-2">
                <select id="inputState" class="form-control">
                    <option selected>None</option>
                    <option>Beginner</option>
                    <option>Intermediate</option>
                </select>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <button type="button" class=" btn btn-primary col-sm-1 m-1">Next</button>
            <button type="button" class=" btn btn-primary col-sm-1 m-1">Cancel</button>
        </div>
    }
