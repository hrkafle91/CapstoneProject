@using Capstone.Business;
@{
    ViewBag.Title = "QuestionsView";
    var skills = ProfileService.GetAllSkills();
}

<div style="margin-top:3%;">

    <h2>Select your experience with the following skills:</h2><br /><br /><br />

    @foreach (var skill in skills)
    {
        <div class="form-group row justify-content-center">
            <label for="inputState" class="col-md-2 col-form-label-lg">@skill.skillName</label>
            <div class="col-md-2">
                <select id="skillLevel" class="form-control">
                    <option selected>None</option>
                    <option>Beginner</option>
                    <option>Intermediate</option>
                </select>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            @if (skills.IndexOf(skill) < skills.Count - 1)
            {
                <button type="button" id="btnNext" skill-id="@skill.skillId" class=" btn btn-primary col-sm-1 m-1">Next</button>
            }
            else
            {
                <button type="button" id="btnSubmit" skill-id="@skill.skillId" class=" btn btn-primary col-sm-1 m-1">Submit</button>
            }
            <button type="button" class=" btn btn-primary col-sm-1 m-1">Cancel</button>
        </div>
    }
</div>

@section Scripts {
    <script type="text/javascript">



        $(document).ready(function () {
            var skills = [];

            $('#btnNext').click(function () {
                console.log("hahahah")
                var skillId = $(this).attr('skill-id');
                var skillLevel = $('#skillLevel').val();

                var skill = new Object();
                skill.SkillId = skillId;
                skill.skillLevel = skillLevel;

                skills.push(skill)
                console.log(skill)
            });

            $('#btnSubmit').click(function () {
                var skillId = $(this).attr('skill-id');
                var skillLevel = $('#skillLevel').val();

                var skill = new Object();
                skill.SkillId = skillId;
                skill.SkillLevel = skillLevel;

                skills.push(skill);
                console.log(skill)

                console.log(skills)

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("PostSkillLevels", "Profile")',
                    contentType: 'application/json',
                    data: JSON.stringify({ skills: skills }),
                    dataType: "json",
                    success: function (data) {
                        if (data != null) {
                            console.log(data)
                        }
                    },
                    error: function (m) {

                    },
                });
            });
        })

    </script>
    }


