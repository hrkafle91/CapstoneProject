@using DBModel
@model List<Job>

@if (Model.Count == 0)
{
    <h6 class="alert-info">No Job Postings Found</h6>
}
else
{
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Job Title</th>
                <th scope="col">Company</th>
                <th scope="col">Related Career Path</th>
                <th scope="col">Job Type</th>
            </tr>
        </thead>

        @{
            
            foreach (var item in Model)
            {
                <tr>
                    <td> @Html.ActionLink(item.jobId, "JobDetails", "Home", new { id = item.Id }, null)</td>
                    <td>@item.jobTitle</td>
                    <td>@item.company</td>
                    <td>@item.careerPath</td>
                    <td>@item.jobType</td>
                    
                </tr>
            }
        }
    </table>
 }